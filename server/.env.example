# Environment Variables for Backend Server
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_use_random_string

# Blockchain Configuration
GANACHE_URL=http://127.0.0.1:7545
# For production, use a real Ethereum network:
# GANACHE_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Biometric Scanner API
BIOMETRIC_API_URL=https://localhost:8000

# Security
AADHAAR_SALT=voting_system_salt_2024_change_in_production

# CORS Origins (Frontend URLs)
VOTER_PORTAL_URL=http://localhost:5173
OFFICER_DASHBOARD_URL=http://localhost:5174
